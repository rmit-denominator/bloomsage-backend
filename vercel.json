{
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python",
            "env": {
                "PIP_INSTALL_OPTIONS": "--no-cache-dir --no-dependencies"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "env": {
        "PORT": "8000"
    },
    "framework": {
        "api:build": "python -m ml_fetch.py"
    }
}